<h1 class="center-align">Welcome to Top Dog Academy!!!</h1>

<% if @error %>
    <ul>
    <% @error.each do |name, error| %>
        <li><%= error %><br></li>
    <% end %>
    </ul>
<% end %>

<h2 class="center-align header">Login</h2>
<div class="login-box">
    <div class="login-links">
        <div class="credential">
            <%= link_to "Log In with Credentials", login_path, class: "login" %>
        </div>
        <div class="Oauth ">
            <%= link_to image_tag("/images/github-logo.png", border: 0, :class => "logo") + " Log In with GitHub", '/auth/github', class: "login github" %>
        </div>
    </div>
</div>
<h2 class="center-align header">Signup</h2>
<div class="signin-box">
    <div class="signin-links">
        <%= link_to "Create New Owner", new_user_path, class: "signin" %>
        <%= link_to "Create New Trainer", new_trainer_path, class: "signin" %>
    </div>
</div>