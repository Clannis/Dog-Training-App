<h2>New Trainer</h2>

<% if @trainer.errors.any? %>
    <ul>
    <% @trainer.errors.full_messages.each do |error| %>
        <li><%= error %><br></li>
    <% end %>
    </ul>
<% end %>

<%= form_with(model: @trainer) do |f| %>
    <%= f.label :Picture %>
    <%= f.file_field :avatar , accept: "image/jpeg,image/png"%><br>
    Username: <%= f.text_field :username %><br>
    <%= render 'form' %>
    Password: <%= f.password_field :password %><br>
    Password Confirmation: <%= f.password_field :password_confirmation %><br>
    <%= f.submit %>
<% end %>