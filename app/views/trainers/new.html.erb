<h2>New Trainer</h2>
<%= form_with(model: @trainer) do |f| %>
    Username: <%= f.text_field :username %><br>
    First Name: <%= f.text_field :first_name %><br>
    Last Name: <%= f.text_field :last_name %><br>
    Phone Number: <%= f.text_field :phone_number_1, maxlength: 3%> - <%= f.text_field :phone_number_2, maxlength: 3 %> - <%= f.text_field :phone_number_3, maxlength: 4 %><br>
    Email: <%= f.text_field :email %><br>
    Credentails: <%= f.text_field :certification %><br>
    Password: <%= f.password_field :password %><br>
    Password Confirmation: <%= f.password_field :password_confirmation %><br>
    <%= f.submit %>
<% end %>