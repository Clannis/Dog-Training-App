<h2><%= @trainer.username %>'s Info</h2>

<% if @trainer.errors.any? %>
    <ul>
    <% @trainer.errors.full_messages.each do |error| %>
        <li><%= error %><br></li>
    <% end %>
    </ul>
<% end %>

<%= form_with(model: @trainer) do |f| %>
    <%= f.label :Picture %> 
    <%= f.file_field :avatar , accept: "image/jpeg,image/png"%><br>
    <%= render 'form' %>
    <%= f.submit %>
<% end %>